{
  "extends": "@sentry/typescript/tsconfig.json",
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "noImplicitThis": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmitHelpers": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist/**/*", "**/__mocks__/**", "**/__tests__/**"]
}
